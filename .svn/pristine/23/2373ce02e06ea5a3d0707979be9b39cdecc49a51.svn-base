package com.czmz.mqtt.subscribes.controller;


import com.alibaba.fastjson.JSONObject;
import com.baomidou.mybatisplus.core.metadata.IPage;
import com.baomidou.mybatisplus.extension.plugins.pagination.Page;
import com.czmz.mqtt.common.JsonResult;
import com.czmz.mqtt.online.entity.PPage;
import com.czmz.mqtt.subscribes.entity.SubscribesRecord;
import com.czmz.mqtt.subscribes.service.ISubscribesRecordService;
import io.swagger.annotations.Api;
import io.swagger.annotations.ApiOperation;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import java.util.List;

/**
 * <p>
 *  前端控制器
 * </p>
 *
 * @author yjc
 * @since 2019-11-29
 */
@Api("订阅接口")
@RestController
@RequestMapping("subscribes")
public class SubscribesRecordController {

    @Autowired
    private ISubscribesRecordService iSubscribesRecordService;
    @ApiOperation("获取订阅列表")
    @PostMapping("getAll")
    JSONObject getAll(@RequestBody PPage page){
        IPage<SubscribesRecord> subscribesRecords=iSubscribesRecordService
                .selectAll(new Page(page.getCurrent(),page.getSize()));
        return JsonResult.success(subscribesRecords);
    }
}
