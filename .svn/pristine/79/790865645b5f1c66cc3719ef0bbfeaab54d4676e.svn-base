package com.czmz.mqtt.company.controller;


import com.alibaba.fastjson.JSONObject;
import com.baomidou.mybatisplus.core.toolkit.Wrappers;
import com.czmz.mqtt.common.BaseFinal;
import com.czmz.mqtt.common.JsonResult;
import com.czmz.mqtt.company.entity.CompanyRecord;
import com.czmz.mqtt.company.service.ICompanyRecordService;
import io.swagger.annotations.Api;
import io.swagger.annotations.ApiOperation;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;

import org.springframework.web.bind.annotation.RestController;

/**
 * <p>
 *  前端控制器
 * </p>
 *
 * @author yjc
 * @since 2019-12-23
 */
@Api
@RestController
@RequestMapping("company")
public class CompanyRecordController {
    @Autowired
    private ICompanyRecordService iCompanyRecordService;
    @ApiOperation("获取公司列表")
    @GetMapping("getAll")
    JSONObject getAll(){
        return JsonResult.success(
                iCompanyRecordService.list(Wrappers.<CompanyRecord>lambdaQuery()
                        .eq(CompanyRecord::getIsDel, BaseFinal.NOTDEL))
        );
    }
}
