package com.czmz.mqtt.device.controller;


import com.alibaba.fastjson.JSONObject;
import com.baomidou.mybatisplus.extension.plugins.pagination.Page;
import com.czmz.mqtt.common.BaseFinal;
import com.czmz.mqtt.common.JsonResult;
import com.czmz.mqtt.device.entity.DeviceRecord;
import com.czmz.mqtt.device.service.IDeviceRecordService;
import com.czmz.mqtt.deviceType.entity.DeviceTypeRecord;
import com.czmz.mqtt.online.entity.PPage;
import io.swagger.annotations.Api;
import io.swagger.annotations.ApiOperation;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

/**
 * <p>
 *  前端控制器
 * </p>
 *
 * @author yjc
 * @since 2019-12-23
 */
@Api
@RestController
@RequestMapping("device")
public class DeviceRecordController {
    @Autowired
    private IDeviceRecordService iDeviceRecordService;
    @ApiOperation("添加修改设备")
    @PostMapping("updateDev")
    JSONObject update(@RequestBody DeviceRecord deviceRecord){
        iDeviceRecordService.saveOrUpdate(deviceRecord);
        return JsonResult.success("success");
    }
    @ApiOperation("删除设备")
    @GetMapping("deleteDev")
    JSONObject deleteDev(Long id){
        DeviceRecord deviceRecord=new DeviceRecord();
        deviceRecord.setId(id);
        deviceRecord.setIsDel(BaseFinal.DEL);
        iDeviceRecordService.updateById(deviceRecord);
        return JsonResult.success("success");
    }
    @ApiOperation("查看设备列表")
    @PostMapping("getAllDev")
    JSONObject getAllPage(@RequestBody PPage page){
        return JsonResult.success(
                iDeviceRecordService
                        .selectAll(new Page(page.getCurrent(),page.getSize()))
        );
    }

}
